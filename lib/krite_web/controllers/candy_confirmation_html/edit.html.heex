<div class="mx-auto max-w-sm">
  <.header class="text-center">Confirm account</.header>

  <.simple_form for={@conn.params["candy"]} as={:candy} action={~p"/candies/confirm/#{@token}"}>
    <:actions>
      <.button class="w-full">Confirm my account</.button>
    </:actions>
  </.simple_form>

  <p class="text-center mt-4">
    <.link href={~p"/candies/register"}>Register</.link>
    | <.link href={~p"/candies/log_in"}>Log in</.link>
  </p>
</div>
